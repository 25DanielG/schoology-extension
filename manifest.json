{
  "name": "Schoology Schedule",
  "version": "1.0",
  "description": "Integrate your Infinite Campus schedule into Schoology.",
  "permissions": ["storage","https://harkerca.infinitecampus.org/*/","https://www.harker.org/*/","https://saml.finalsite.com/*/"],
  "content_scripts": [
    {
      "matches": ["https://schoology.harker.org/*"],
      "js":["main.js"]
    }
  ],
  "background": {
    "persistent":false,
	"scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/harker.png"
  },
  "manifest_version": 2
}